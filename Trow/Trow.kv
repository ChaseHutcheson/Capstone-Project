<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text:'Trow'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "Photo Translate"
                on_press: 
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'photo_translate'
            Button:
                text: "History"
                on_press: 
                    root.manager.transition.direction = 'up'
                    root.manager.current = 'history'
            Button:
                text: "Text translate"
                on_press: 
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'text_translate'


<PhotoTranslate>:
    BoxLayout:
        orientation:'vertical'
        Camera:
            id: cam
            resolution: (640, 480)
            play: True
        Button:
            text: 'Translate'
            size_hint_y: None
            height: '48dp'
            on_press: root.capture()     
        Button:
            text: "Return to menu"
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'menu'
  

<TextTranslate>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text:'Text-Translate'
        Button:
            text: "Return to menu"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'

<TranslateHistory>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text:'History'
        Button:
            text: "Return to menu"
            on_press: 
                root.manager.transition.direction = 'down'
                root.manager.current = 'menu'