<MainMenu>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '12dp'
        padding: ('12dp', '12dp', '12dp', '12dp')
        MDScreen:
            MDAnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
            Image:
                source: 'images/Trow_Logo_Black.png'
                size_hint: None,None
                size: '400dp','400dp'
                pos_hint: {'center_x':.5, 'center_y':.5}
        MDLabel:
            text:'Translations when you need.'
            halign: 'center'
            font_style: 'H5'
            bold: True
        MDFillRoundFlatButton:
            text: "Photo Translate"
            pos_hint: {'center_x':.5, 'center_y':.5}
            size_hint_x:1
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'photo_translate'
        MDFillRoundFlatButton:
            text: "History"
            pos_hint: {'center_x':.5, 'center_y':.5}
            size_hint_x:1
            on_press: 
                root.manager.transition.direction = 'up'
                root.manager.current = 'history'
        MDFillRoundFlatButton:
            text: "Text translate"
            pos_hint: {'center_x':.5, 'center_y':.5}
            size_hint_x:1
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'text_translate'


<PhotoTranslate>:
    #background color
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos:self.pos
            size: self.size
    MDBoxLayout:
        orientation:'vertical'
        spacing: '12dp'
        padding: '12dp'
        Camera:
            id: cam
            resolution: (640, 480)
            play: True
            mirror: True
        MDLabel:
            id: photo_untranslated
            text:'No Text Found'
            color: 0, 0, 0, 1
        MDBoxLayout:
            orientation:'horizontal'
            spacing: '12dp'
            padding: '12dp'
            MDFillRoundFlatButton:
                text: 'Translate'
                on_press: root.capture()     
            MDFillRoundFlatButton:
                text: "Return to menu"
                on_press: 
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'menu'
            MDFillRoundFlatButton:
                text: 'Flip Output'
                on_press: root.reverseOutput()
  

<TextTranslate>:
    #background color
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos:self.pos
            size: self.size
    MDGridLayout:
        cols: 2
        rows: 3
        padding: ('10dp', '10dp', '10dp', '10dp')
        spacing: '10dp'
        MDLabel:
            text: 'Input'
            size: '48dp','48dp'
        MDLabel:
            text: 'Output'
            size: '48dp','48dp'
        TextInput:
            id: text_untranslated
            hint_text: 'Input Text Here'
        MDLabel:
            id: text_translated
            text: 'No text Input'
            color: 0, 0, 0, 1
        MDFillRoundFlatButton:
            text: "Return to menu"
            size_hint_y: None
            size_hint_x: 0.5
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'
        MDFillRoundFlatButton:
            text: "Translate"
            size_hint_y: None
            size_hint_x:1
            on_press: root.translation()

<TranslateHistory>:
    #background color
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos:self.pos
            size: self.size
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '12dp'
        padding: '12dp'
        MDFillRoundFlatButton:
            text: "Return to menu"
            on_press: 
                root.manager.transition.direction = 'down'
                root.manager.current = 'menu'