<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (37/255,150/255,190/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [18]

<MainMenu>:
    #background color
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos:self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        spacing: '12dp'
        padding: '12dp'
        Image:
            source: 'images/Trow_Logo_Black.png'
            pos_hint: {'center_x': 0.5, 'center_y': 1}
        Label:
            text:'Translations when you need.'
            size_hint: 1,.25
            color: 0, 0, 0, 1
            bold: True
        GridLayout:
            cols: 3
            rows: 1
            size_hint: 1,.5 
            padding: ('10dp', '10dp', '10dp', '10dp')
            spacing: '10dp'
            RoundedButton:
                text: "Photo Translate"
                on_press: 
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'photo_translate'
            RoundedButton:
                text: "History"
                on_press: 
                    root.manager.transition.direction = 'up'
                    root.manager.current = 'history'
            RoundedButton:
                text: "Text translate"
                on_press: 
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'text_translate'


<PhotoTranslate>:
    #background color
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos:self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        spacing: '12dp'
        padding: '12dp'
        Camera:
            id: cam
            resolution: (640, 480)
            play: True
        Label:
            id: photo_untranslated
            text:''
            color: 0, 0, 0, 1
        BoxLayout:
            orientation:'horizontal'
            spacing: '12dp'
            padding: '12dp'
            RoundedButton:
                text: 'Translate'
                on_press: root.capture()     
            RoundedButton:
                text: "Return to menu"
                on_press: 
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'menu'
  

<TextTranslate>:
    #background color
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos:self.pos
            size: self.size
    GridLayout:
        cols: 2
        rows: 2
        padding: ('10dp', '10dp', '10dp', '10dp')
        spacing: '10dp'
        TextInput:
            id: text_untranslated
            hint_text: 'Input Text Here'
        Label:
            id: text_translated
            text: 'No text Input'
            color: 0, 0, 0, 1
        RoundedButton:
            text: "Return to menu"
            size_hint_y: None
            height: '125dp'
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'
        RoundedButton:
            text: "Translate"
            size_hint_y: None
            height: '125dp'
            on_press: root.translation()

<TranslateHistory>:
    #background color
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos:self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        spacing: '12dp'
        padding: '12dp'
        RoundedButton:
            text: "Return to menu"
            on_press: 
                root.manager.transition.direction = 'down'
                root.manager.current = 'menu'